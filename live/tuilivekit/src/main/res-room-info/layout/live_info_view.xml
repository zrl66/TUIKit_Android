<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@drawable/room_info_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <io.trtc.tuikit.atomicx.widget.basicwidget.avatar.AtomicAvatar
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:avatarShape="round"
        app:avatarSize="s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/common_not_standard_blue_d1"
        app:strokeWidth="0.86dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxWidth="90dp"
        android:textColor="@color/common_design_standard_g7" />

    <io.trtc.tuikit.atomicx.widget.basicwidget.button.AtomicButton
        android:id="@+id/atomic_btn_follow"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:buttonVariant="filled"
        android:visibility="gone"
        app:buttonColorType="primary"
        app:buttonTextSize="12sp" />
</LinearLayout>