<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    tools:ignore="DisableBaselineAlignment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_bg_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/livekit_preview_function_item_bg_image"
            tools:ignore="ContentDescription" />

        <io.trtc.tuikit.atomicx.widget.basicwidget.label.AtomicLabel
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_bg_image"
            android:gravity="center_horizontal"
            android:text="@string/common_settings_bg_image"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_audio_effect"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/livekit_preview_function_item_music"
            tools:ignore="ContentDescription" />

        <io.trtc.tuikit.atomicx.widget.basicwidget.label.AtomicLabel
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_audio_effect"
            android:gravity="center_horizontal"
            android:text="@string/common_audio_effect"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/livekit_preview_function_item_settings"
            tools:ignore="ContentDescription" />

        <io.trtc.tuikit.atomicx.widget.basicwidget.label.AtomicLabel
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_settings"
            android:gravity="center_horizontal"
            android:text="@string/common_settings"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_layout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/livekit_preview_function_item_layout"
            tools:ignore="ContentDescription" />

        <io.trtc.tuikit.atomicx.widget.basicwidget.label.AtomicLabel
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_layout"
            android:gravity="center_horizontal"
            android:text="@string/common_template_layout"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

</LinearLayout>