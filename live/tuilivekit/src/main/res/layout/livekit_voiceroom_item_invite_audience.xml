<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/common_design_standard_g2"
    android:gravity="start">

    <io.trtc.tuikit.atomicx.widget.basicwidget.avatar.AtomicAvatar
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        app:avatarSize="m" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/iv_head"
        android:textColor="@color/common_design_standard_g7"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/tv_name"
        android:background="@drawable/livekit_audience_list_panel_level_background"
        android:gravity="center"
        android:text="lv20"
        android:textColor="@color/common_design_standard_flowkit_white"
        android:textSize="12sp"
        android:visibility="gone" />

    <io.trtc.tuikit.atomicx.widget.basicwidget.button.AtomicButton
        android:id="@+id/invite_button"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:visibility="visible"
        app:customButtonSize="xs"
        app:textStyle="false"
        app:buttonTextSize="12sp" />
</RelativeLayout>
