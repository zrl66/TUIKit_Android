<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <gradient
                android:angle="315"
                android:startColor="@color/roomkit_color_gradient_start"
                android:endColor="@color/roomkit_color_gradient_end"
                android:type="linear" />
            <corners android:radius="10dp"/>
            <padding android:left="5dp" android:right="5dp" android:top="3dp" android:bottom="3dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/roomkit_color_button_disabled" />
            <corners android:radius="10dp"/>
            <padding android:left="5dp" android:right="5dp" android:top="3dp" android:bottom="3dp"/>
        </shape>
    </item>
</selector>